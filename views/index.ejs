<!DOCTYPE html>
<html>
<head>
    <title>App Distribution Platform</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-8">App Distribution Platform</h1>
        
        <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
            <h2 class="text-2xl font-semibold text-gray-700 mb-4">Upload New App</h2>
            <input type="password" id="adminPassword" placeholder="Management Password" 
                   class="border p-2 mb-4 block">
            <div id="uploadPanel" style="display: none;">
                <form id="uploadForm" action="/upload" method="post" enctype="multipart/form-data" onsubmit="return doUpload();" class="space-y-4">
                    <div class="flex items-center space-x-4">
                        <input type="file" name="file" required 
                               class="block w-full text-sm text-gray-500
                                      file:mr-4 file:py-2 file:px-4
                                      file:rounded-full file:border-0
                                      file:text-sm file:font-semibold
                                      file:bg-blue-50 file:text-blue-700
                                      hover:file:bg-blue-100">
                        <button type="submit" 
                                class="bg-blue-600 text-white px-6 py-2 rounded-lg
                                       hover:bg-blue-700 transition duration-200">
                            Upload
                        </button>
                    </div>
                    <progress id="uploadProgress" value="0" max="100" class="w-full mt-2"></progress>
                </form>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-6">
            <h2 class="text-2xl font-semibold text-gray-700 mb-6">Available Apps</h2>
            <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
                <% for (const [appName, versions] of Object.entries(apps)) { %>
                    <div class="bg-gray-50 rounded-lg p-4 hover:shadow-md transition duration-200">
                        <h3 class="text-xl font-medium text-gray-800 mb-2">
                            <a href="/app/<%= appName %>" class="hover:text-blue-600"><%= appName %></a>
                        </h3>
                        <p class="text-sm text-gray-600">
                            Latest version: <span class="font-semibold">v<%= Math.max(...versions.map(v => v.version)) %></span>
                        </p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <script>
    function doUpload() {
        const form = document.getElementById('uploadForm');
        const xhr = new XMLHttpRequest();
        const progressBar = document.getElementById('uploadProgress');
        xhr.upload.addEventListener('progress', e => {
            if (e.lengthComputable) {
                progressBar.value = (e.loaded / e.total) * 100;
            }
        });
        xhr.open('POST', form.action + '?password=' + encodeURIComponent(document.getElementById('adminPassword').value));
        xhr.send(new FormData(form));
        xhr.onload = () => location.reload();
        return false;
    }
    document.getElementById('adminPassword').addEventListener('input', function() {
        if (this.value === '13579') {
            document.getElementById('uploadPanel').style.display = 'block';
        } else {
            document.getElementById('uploadPanel').style.display = 'none';
        }
    });
    </script>
</body>
</html>
